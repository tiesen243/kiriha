{
  "name": "@kiriha/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "db:generate": "bun run with-env drizzle-kit generate",
    "db:push": "bun run with-env drizzle-kit push",
    "db:seed": "bun run with-env bun ./src/seed.ts",
    "db:studio": "bun run with-env drizzle-kit studio",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@kiriha/prettier-config",
  "dependencies": {
    "@kiriha/validators": "workspace:*",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@kiriha/eslint-config": "workspace:*",
    "@kiriha/prettier-config": "workspace:*",
    "@kiriha/tsconfig": "workspace:*",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "^0.31.4",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
